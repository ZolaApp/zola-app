{
  "name": "zola-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "next src",
    "build": "next build src",
    "start": "next start src",
    "icons": "npx run lint:svg && spritesh --input src/assets/images/icons --output src/static/icons.svg",
    "lint:svg": "npx svgo -f src/assets/images/icons --pretty --indent=2 --enable=removeTitle --disable=removeViewBox"
  },
  "husky": {
    "hooks": {
      "pre-commit": "flow check && lint-staged",
      "pre-rewrite": "flow check && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-eslint": "8.2.3",
    "babel-plugin-inline-import-graphql-ast": "2.3.6",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-standard": "11.0.0",
    "eslint-config-standard-react": "6.0.0",
    "eslint-plugin-flowtype": "2.46.3",
    "eslint-plugin-import": "2.11.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-react": "7.7.0",
    "eslint-plugin-standard": "3.1.0",
    "flow-bin": "0.71.0",
    "husky": "0.15.0-rc.13",
    "lint-staged": "7.0.5",
    "prettier": "1.12.1",
    "spritesh": "^1.2.1",
    "svgo": "^1.0.5"
  },
  "dependencies": {
    "@zeit/next-css": "0.1.5",
    "babel-plugin-styled-components": "1.5.1",
    "graphql": "^0.13.2",
    "next": "6.0.0",
    "next-compose-plugins": "^2.1.1",
    "next-optimized-images": "^1.4.0",
    "react": "16.3.2",
    "react-dom": "16.3.2",
    "styled-components": "3.2.6"
  }
}
